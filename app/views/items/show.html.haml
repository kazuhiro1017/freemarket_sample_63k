.wrapper
  .hedder
    = render 'hedder'
  %section.item-box
    %h1.item-name
      = @item.name
    .item-content
      .item-photo
        .swiper-container
          .swiper-wrapper
            - if @item.images.attached?
              - @item.images.reverse.each do |image|
                .swiper-slide
                  = image_tag image, class: "item-image"
          .thumblist
      .item-detail
        .tbody
          .tr
            .th
              出品者
            .td
              =link_to "", class: "blue-link" do
                = @item.user.nickname
              .ratings
                .item-user-rating
                  %i.fas.fa-laugh
                  %span
                    2
                .item-user-rating
                  %i.fas.fa-meh
                  %span
                    4
                .item-user-rating
                  %i.fas.fa-frown
                  %span
                    6
          .tr
            .th
              カテゴリー
            .td
              =link_to "", class: "blue-link" do
                = @root
              =link_to "", class: "blue-link" do
                %i.fas.fa-chevron-right
                = @parent
              =link_to "", class: "blue-link" do
                %i.fas.fa-chevron-right
                = @children
          .tr
            .th
              ブランド
            .td
              =link_to "", class: "blue-link" do
                = @item.brand
          .tr
            .th
              商品のサイズ
            .td
              = @item.size
          .tr
            .th
              商品の状態
            .td
              = @item.condition
          .tr
            .th
              配送料の負担
            .td
              = @item.postage
          .tr
            .th
              配送の方法
            .td
              = @item.delivery_method
          .tr
            .th
              配送元地域
            .td
              =link_to "", class: "blue-link" do
                = @item.from_prefecture
          .tr
            .th
              発送日の目安
            .td
              = @item.delivery_days
    .item-price-box
      %span.item-price
        -# ¥
        -# = @price
        = number_to_currency (@item.price)
      %span.item-tax
        (税込)
      %span.item-shipping-fee
        送料込み
    -unless session[:user_id]
      =link_to login_users_path, class: "item-buy-btn" do
        購入画面に進む
    -if session[:user_id]
      -unless @item.user.id == session[:user_id] 
        =link_to purchase1_item_path, class: "item-buy-btn" do
          購入画面に進む
    .item-description
      %p.item-description-inner
        = @item.description
    .item-btn-container
      .item-btn-left
        %button.item-btn-left__like{type: "submit"}
          %i.far.fa-heart
          %span
            いいね！
          %span.like-number
            = @item.like_count
        %button.item-btn-left__report{type: "submit"}
          %i.far.fa-flag
          %span
            不適切な商品の報告
      .item-btn-right
        =link_to "", class: "blue-link" do
          %i.fas.fa-lock
          %span
            あんしん・あんぜんへの取り組み
  
  - if session[:user_id] && session[:user_id] == @item.user_id
    .three_button_box
      = link_to edit_item_path(@item.id), class: "edit_red_button" do
        商品の編集 
      %p.text_center or
      = link_to "#", class: "stop_sell" do
        出品を一旦停止する
      = link_to item_path(@item.id), method: :delete, class: "delete_item" do
        この商品を削除する



  .item-detail-message
    .message-container
      .message-content
        %form.message-form{action: "", method: "post"}
          %p
            相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %textarea.message-text{name: "", type: "text"}
        %button.message-submit{type: "submit"}
          コメントする

  .item-sns-box
    %ul.sns
      %li.share-facebook
        =link_to "", class: "share-btn" do
          %i.fab.fa-facebook-square
      %li.share-twitter
        =link_to "", class: "share-btn" do
          %i.fab.fa-twitter
      %li.share-line
        =link_to "", class: "share-btn" do
          %i.fab.fa-line
      %li.share-pinterest
        =link_to "", class: "share-btn" do
          %i.fab.fa-pinterest

  .items-another
    .items-container
      %h2.items-top
        =link_to "", class: "blue-link" do
          なまえさんのその他の出品
      .items-content
        = render partial: 'showitems', collection: @user_items
        
  = render 'layouts/pankuzu'
  .footer
    = render 'footer'
    